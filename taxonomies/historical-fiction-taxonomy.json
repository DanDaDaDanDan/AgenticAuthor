    "historical_accuracy": {
      "category_name": "Historical Accuracy Level",
      "selection_rule": "select_one",
      "description": "Fidelity to historical facts",
      "options": {
        "strict_accuracy": {
          "name": "Strictly Accurate",
          "description": "Meticulous historical fidelity",
          "approach": ["extensive research", "period language", "accurate details", "real events"],
          "challenge": "balancing fact and fiction"
        },
        "mostly_accurate": {
          "name": "Mostly Accurate",
          "description": "Generally faithful with some liberties",
          "approach": ["major events accurate", "some timeline compression", "representative characters"],
          "balance": "story and history"
        },
        "inspired_by": {
          "name": "Inspired By History",
          "description": "Historical flavor with creative freedom",
          "liberties": ["composite characters", "invented events", "atmosphere over accuracy"],
          "priority": "story first"
        },
        "alternate_history": {
          "name": "Alternate History",
          "description": "What if scenarios",
          "divergence": ["different outcome", "key figure survives/dies", "technology appears early"],
          "exploration": "consequences of change"
        },
        "historical_fantasy": {
          "name": "Historical Fantasy",
          "description": "History with magical elements",
          "blend": ["real events", "magical causes", "mythical beings", "supernatural"],
          "appeal": "familiar yet magical"
        }
      }
    },

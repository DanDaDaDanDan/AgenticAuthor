        },
        "belonging": {
          "name": "Belonging/Acceptance",
          "description": "Finding your place",
          "aspects": ["fitting in", "standing out", "acceptance", "community"],
          "need": "fundamental human"
        },
        "identity": {
          "name": "Identity Formation",
          "description": "Who am I?",

{
  "taxonomy_version": "1.0",
  "taxonomy_name": "Young Adult (YA) Classification System",
  "extends": "base-taxonomy",
  "genre": "young-adult",
  "description": "Fiction for teens and young adults featuring coming-of-age themes and young protagonists",
  "categories": {
    "ya_genre": {
      "category_name": "YA Genre",
      "selection_rule": "select_primary_and_secondary",
      "description": "The specific genre within YA",
      "options": {
        "ya_fantasy": {
          "name": "YA Fantasy",
          "description": "Magic and adventure for teens",
          "elements": ["chosen one", "magic school", "quest", "powers awakening"],
          "popular_types": ["urban fantasy", "high fantasy", "fairy tale retelling", "mythology"],
          "appeal": "escape and empowerment"
        },
        "ya_dystopian": {
          "name": "YA Dystopian",
          "description": "Teen heroes in oppressive futures",
          "themes": ["rebellion", "corrupt authority", "survival", "freedom"],
          "structure": ["divided society", "selection/ceremony", "revolution", "love triangle"],
          "message": "youth power"
        },
        "ya_contemporary": {
          "name": "YA Contemporary",
          "description": "Real-world teen experiences",
          "themes": ["first love", "identity", "family", "friendship", "school"],
          "issues": ["mental health", "sexuality", "social media", "pressure"],
          "tone": "authentic voice"
        },
        "ya_romance": {
          "name": "YA Romance",
          "description": "Love stories for teens",
          "elements": ["first love", "crushes", "love triangles", "forbidden love"],
          "heat_level": ["sweet", "closed door", "fade to black"],
          "focus": "emotional connection"
        },
        "ya_paranormal": {
          "name": "YA Paranormal",
          "description": "Supernatural teen stories",
          "creatures": ["vampires", "werewolves", "witches", "angels", "ghosts"],
          "themes": ["otherness", "hidden identity", "power control", "acceptance"],
          "setting": "contemporary with magic"
        },
        "ya_scifi": {
          "name": "YA Science Fiction",
          "description": "Future and technology for teens",
          "elements": ["space adventure", "time travel", "dystopia", "superpowers"],
          "themes": ["identity", "rebellion", "discovery", "humanity"],
          "tone": "accessible sci-fi"
        },
        "ya_thriller": {
          "name": "YA Thriller/Mystery",
          "description": "Suspense for teen readers",
          "elements": ["missing persons", "dark secrets", "conspiracy", "murder mystery"],
          "protagonists": ["amateur sleuth", "witness", "suspect", "victim"],
          "pacing": "page-turner"
        },
        "ya_horror": {
          "name": "YA Horror",
          "description": "Age-appropriate scares",
          "elements": ["haunting", "monsters", "survival", "folklore"],
          "boundaries": ["less gore", "psychological focus", "hope elements"],
          "appeal": "safe scares"
        },
        "ya_historical": {
          "name": "YA Historical",
          "description": "History through teen eyes",
          "periods": ["WWII", "Victorian", "1960s", "Ancient civilizations"],
          "perspectives": ["coming of age in history", "teen heroes", "untold stories"],
          "balance": "accuracy and accessibility"
        },
        "ya_sports": {
          "name": "YA Sports",
          "description": "Athletic teen stories",
          "themes": ["competition", "teamwork", "dedication", "identity beyond sports"],
          "conflicts": ["injury", "pressure", "rivals", "balance"],
          "sports": ["football", "dance", "swimming", "basketball"]
        }
      }
    },
    "protagonist_age": {
      "category_name": "Protagonist Age",
      "selection_rule": "select_one",
      "description": "Age of main character",
      "options": {
        "younger_ya": {
          "name": "Younger YA (12-14)",
          "description": "Middle school age",
          "themes": ["first crushes", "friend drama", "identity forming", "family important"],
          "content": "very mild"
        },
        "mid_ya": {
          "name": "Mid YA (15-16)",
          "description": "High school age",
          "themes": ["dating", "independence", "future anxiety", "peer pressure"],
          "content": "moderate"
        },
        "older_ya": {
          "name": "Older YA (17-18)",
          "description": "Senior/gap year",
          "themes": ["college prep", "serious relationships", "adulthood looming", "big decisions"],
          "content": "mature YA"
        },
        "crossover": {
          "name": "Crossover (18-25)",
          "description": "YA/Adult bridge",
          "themes": ["college", "first job", "adult relationships", "finding path"],
          "audience": "YA and adults"
        }
      }
    },
    "school_setting": {
      "category_name": "School/Social Setting",
      "selection_rule": "select_one",
      "description": "The social environment",
      "options": {
        "high_school": {
          "name": "High School",
          "description": "Traditional school setting",
          "elements": ["classes", "lockers", "cafeteria", "prom", "cliques"],
          "dynamics": "social hierarchy"
        },
        "boarding_school": {
          "name": "Boarding School",
          "description": "Residential school",
          "elements": ["dorms", "house systems", "traditions", "isolation from family"],
          "advantages": "24/7 drama"
        },
        "magic_school": {
          "name": "Magic/Special School",
          "description": "School for gifted/powered",
          "elements": ["training", "houses/teams", "special classes", "destiny prep"],
          "appeal": "wish fulfillment"
        },
        "summer_program": {
          "name": "Summer Camp/Program",
          "description": "Seasonal intensity",
          "types": ["camp", "internship", "travel program", "competition"],
          "dynamics": "temporary intensity"
        },
        "no_school": {
          "name": "Outside School",
          "description": "Non-academic setting",
          "reasons": ["graduated", "dropped out", "homeschool", "apocalypse"],
          "focus": "work or survival"
        },
        "college": {
          "name": "College/University",
          "description": "Higher education setting",
          "elements": ["dorms", "parties", "classes", "freedom"],
          "themes": "transition to adulthood"
        }
      }
    },
    "central_conflict": {
      "category_name": "Central YA Conflict",
      "selection_rule": "select_primary",
      "description": "Main source of conflict",
      "options": {
        "identity_discovery": {
          "name": "Identity Discovery",
          "description": "Finding who you are",
          "aspects": ["sexuality", "culture", "values", "talents", "purpose"],
          "journey": "self-acceptance"
        },
        "family_conflict": {
          "name": "Family Conflict",
          "description": "Issues with family",
          "types": ["divorce", "expectations", "siblings", "absent parents", "secrets"],
          "resolution": "understanding or independence"
        },
        "social_belonging": {
          "name": "Social Belonging",
          "description": "Finding your tribe",
          "challenges": ["fitting in", "bullying", "popularity", "friendship drama"],
          "goal": "authentic connections"
        },
        "first_love": {
          "name": "First Love/Romance",
          "description": "Navigating romance",
          "elements": ["crushes", "heartbreak", "jealousy", "self-worth"],
          "growth": "emotional maturity"
        },
        "power_responsibility": {
          "name": "Power and Responsibility",
          "description": "Handling new abilities/role",
          "types": ["magical powers", "leadership", "knowledge", "influence"],
          "lesson": "with great power..."
        },
        "survival_competition": {
          "name": "Survival/Competition",
          "description": "High-stakes contest",
          "formats": ["death games", "selection", "tournament", "audition"],
          "stakes": "life or dreams"
        },
        "justice_rebellion": {
          "name": "Justice/Rebellion",
          "description": "Fighting the system",
          "targets": ["corrupt authority", "unfair rules", "oppression", "adult failures"],
          "role": "reluctant hero"
        },
        "mental_health": {
          "name": "Mental Health",
          "description": "Psychological challenges",
          "issues": ["anxiety", "depression", "eating disorders", "trauma"],
          "journey": "healing and coping"
        }
      }
    },
    "relationship_dynamics": {
      "category_name": "Relationship Dynamics",
      "selection_rule": "select_all_that_apply",
      "description": "Key relationships in the story",
      "options": {
        "love_triangle": {
          "name": "Love Triangle",
          "description": "Choosing between two",
          "types": ["two suitors", "best friend vs new person", "safe vs dangerous"],
          "tension": "torn hearts"
        },
        "enemies_to_lovers": {
          "name": "Enemies to Lovers",
          "description": "Hate to love journey",
          "progression": ["initial conflict", "forced proximity", "understanding", "attraction"],
          "appeal": "tension and banter"
        },
        "best_friends": {
          "name": "Best Friend Drama",
          "description": "Friendship challenges",
          "conflicts": ["growing apart", "betrayal", "secrets", "competition"],
          "importance": "friendship = family"
        },
        "found_family": {
          "name": "Found Family",
          "description": "Creating chosen family",
          "elements": ["misfits unite", "team bonding", "loyalty", "belonging"],
          "theme": "family you choose"
        },
        "mentor_relationship": {
          "name": "Mentor/Guide",

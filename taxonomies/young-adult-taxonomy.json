          "types": ["teacher", "coach", "relative", "mysterious guide"],
          "role": "wisdom and support"
        },
        "sibling_dynamics": {
          "name": "Sibling Relationships",
          "description": "Brother/sister bonds",
          "types": ["protective", "rivalry", "twins", "step-siblings"],
          "complexity": "love and competition"
        },
        "parent_teen": {
          "name": "Parent-Teen Conflict",
          "description": "Generational tension",
          "issues": ["independence", "understanding", "expectations", "secrets"],
          "resolution": "balance or break"
        },
        "squad_group": {
          "name": "Squad/Group Dynamic",
          "description": "Friend group navigation",
          "elements": ["group dynamics", "loyalty tests", "peer pressure", "inclusion"],
          "challenge": "individual vs group"
        }
      }

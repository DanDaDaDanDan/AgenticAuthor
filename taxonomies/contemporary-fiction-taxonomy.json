{
  "taxonomy_version": "1.0",
  "taxonomy_name": "Contemporary Fiction Classification System",
  "extends": "base-taxonomy",
  "genre": "contemporary-fiction",
  "description": "Realistic fiction set in the present day exploring modern life and relationships",
  "categories": {
    "contemporary_subgenre": {
      "category_name": "Contemporary Subgenre",
      "selection_rule": "select_primary_and_secondary",
      "description": "The specific type of contemporary story",
      "options": {
        "family_saga": {
          "name": "Family Saga",
          "description": "Multi-generational family stories",
          "key_features": ["family secrets", "generational trauma", "inheritance", "family dynamics"],
          "themes": ["legacy", "tradition vs change", "family bonds", "secrets revealed"],
          "scope": "decades spanning"
        },
        "coming_of_age": {
          "name": "Coming of Age",
          "description": "Transition to adulthood",
          "key_features": ["self-discovery", "first experiences", "identity formation", "loss of innocence"],
          "settings": ["high school", "college", "gap year", "first job"],
          "tone": "nostalgic and honest"
        },
        "domestic_fiction": {
          "name": "Domestic/Family Drama",
          "description": "Home and family life focus",
          "key_features": ["marriage dynamics", "parenting", "household tensions", "everyday struggles"],
          "themes": ["work-life balance", "modern parenting", "relationship strain", "domestic secrets"],
          "perspective": "intimate portrayal"
        },
        "womens_fiction": {
          "name": "Women's Fiction",
          "description": "Women's life experiences",
          "key_features": ["female friendships", "career challenges", "motherhood", "self-empowerment"],
          "themes": ["having it all", "sisterhood", "breaking barriers", "finding voice"],
          "audience": "primarily women"
        },
        "workplace_drama": {
          "name": "Workplace Drama",
          "description": "Professional life and office politics",
          "settings": ["corporate", "startup", "creative industry", "service industry"],
          "conflicts": ["ambition", "ethics", "competition", "work relationships"],
          "relevance": "modern work life"
        },
        "social_issue": {
          "name": "Social Issue Fiction",
          "description": "Contemporary social problems",
          "topics": ["addiction", "homelessness", "immigration", "racism", "mental health"],
          "approach": ["awareness raising", "humanizing", "systemic critique", "personal impact"],
          "purpose": "illuminate issues"
        },
        "relationship_drama": {
          "name": "Relationship Drama",
          "description": "Romantic and platonic relationships",
          "focus": ["marriage troubles", "friendship dynamics", "dating life", "divorce"],
          "exploration": ["communication", "trust", "growth apart", "reconciliation"],
          "realism": "authentic emotions"
        },
        "small_town_life": {
          "name": "Small Town Life",
          "description": "Rural and small community stories",
          "elements": ["community dynamics", "local traditions", "everyone knows everyone", "slow change"],
          "themes": ["belonging", "escape vs roots", "community support", "hidden depths"],
          "atmosphere": "intimate scale"
        },
        "urban_life": {
          "name": "Urban Life",
          "description": "City living experiences",
          "elements": ["anonymity", "diversity", "fast pace", "opportunity and struggle"],
          "themes": ["isolation in crowds", "making it", "gentrification", "cultural melting pot"],
          "energy": "vibrant and challenging"
        },
        "immigrant_experience": {
          "name": "Immigrant Experience",
          "description": "Immigration and cultural adaptation",
          "themes": ["identity", "belonging", "cultural clash", "generational differences"],
          "challenges": ["language barriers", "documentation", "discrimination", "preserving culture"],
          "perspective": "between worlds"
        },
        "campus_novel": {
          "name": "Campus Novel",
          "description": "Academic setting stories",
          "elements": ["academic politics", "student life", "intellectual debates", "campus culture"],
          "themes": ["knowledge pursuit", "ivory tower", "coming of age", "privilege"],
          "setting": "university world"
        },
        "suburban_drama": {
          "name": "Suburban Drama",
          "description": "Suburban life complexities",
          "themes": ["keeping up appearances", "hidden problems", "conformity pressure", "american dream"],
          "elements": ["PTA politics", "neighborhood drama", "perfect family facade", "mid-life crisis"],
          "tone": "surface vs depth"
        }
      }
    },
    "protagonist_stage": {
      "category_name": "Protagonist Life Stage",
      "selection_rule": "select_one",
      "description": "The life phase of main character",
      "options": {
        "child": {
          "name": "Child (Under 12)",
          "description": "Childhood perspective",
          "themes": ["innocence", "discovery", "family dependency", "school life"],
          "voice": "authentic child view"
        },
        "teenager": {
          "name": "Teenager (13-18)",
          "description": "Adolescent experiences",
          "themes": ["identity", "first love", "rebellion", "peer pressure"],
          "challenges": "finding self"
        },
        "young_adult_stage": {
          "name": "Young Adult (19-25)",
          "description": "Early adulthood transition",
          "themes": ["career start", "independence", "relationships", "finding path"],
          "struggles": "adulting"
        },
        "adult": {
          "name": "Adult (26-45)",
          "description": "Established adult life",
          "themes": ["career", "marriage", "parenting", "life choices"],
          "conflicts": "juggling responsibilities"
        },
        "middle_age": {
          "name": "Middle Age (46-65)",
          "description": "Mid-life experiences",
          "themes": ["reflection", "empty nest", "career peak", "aging parents"],
          "questions": "what's next?"
        },
        "senior": {
          "name": "Senior (65+)",
          "description": "Later life stories",
          "themes": ["legacy", "health", "loss", "wisdom", "new chapters"],
          "perspective": "life reviewed"
        },
        "multi_generational": {
          "name": "Multi-Generational",
          "description": "Multiple age perspectives",
          "dynamics": ["family connections", "parallel lives", "generational differences"],
          "scope": "life cycle"
        }
      }
    },
    "central_conflict": {
      "category_name": "Central Conflict",
      "selection_rule": "select_primary",
      "description": "The main source of story tension",
      "options": {
        "internal_struggle": {
          "name": "Internal/Personal",
          "description": "Character vs self",
          "types": ["identity crisis", "moral dilemma", "addiction", "mental health"],
          "resolution": "self-acceptance"
        },
        "family_conflict": {
          "name": "Family Conflict",
          "description": "Family relationship tensions",
          "types": ["parent-child", "sibling rivalry", "marriage strain", "inheritance disputes"],
          "dynamics": "love and resentment"
        },
        "social_pressure": {
          "name": "Social Pressure",
          "description": "Individual vs society",
          "sources": ["conformity", "expectations", "discrimination", "class barriers"],
          "struggle": "authenticity"
        },
        "economic_struggle": {
          "name": "Economic/Financial",
          "description": "Money and class issues",
          "challenges": ["poverty", "job loss", "debt", "class mobility"],
          "impact": "survival and dignity"
        },
        "romantic_complication": {
          "name": "Romantic Complication",
          "description": "Love and relationship problems",
          "types": ["unrequited love", "infidelity", "incompatibility", "timing"],
          "emotion": "heart vs head"
        },
        "professional_challenge": {
          "name": "Professional/Career",
          "description": "Work-related conflicts",
          "issues": ["ethics", "advancement", "work-life balance", "passion vs stability"],
          "stakes": "livelihood and identity"
        },
        "health_crisis": {
          "name": "Health Crisis",
          "description": "Medical and wellness challenges",
          "types": ["terminal illness", "mental health", "addiction", "caregiving"],
          "impact": "life reevaluation"
        },
        "moral_dilemma": {
          "name": "Moral/Ethical Dilemma",
          "description": "Right vs wrong decisions",
          "scenarios": ["whistleblowing", "loyalty conflicts", "truth vs kindness", "justice vs law"],
          "complexity": "no clear answer"
        }
      }
    },
    "narrative_style": {
      "category_name": "Narrative Style",
      "selection_rule": "select_one",
      "description": "How the story is told",
      "options": {
        "linear_realistic": {
          "name": "Linear Realistic",
          "description": "Straightforward chronological",
          "approach": ["traditional narrative", "clear progression", "realistic pacing"],
          "accessibility": "easy to follow"
        },
        "stream_consciousness": {
          "name": "Stream of Consciousness",
          "description": "Internal thought flow",
          "characteristics": ["psychological depth", "free association", "minimal plot", "introspective"],
          "challenge": "reader patience"
        },
        "multiple_perspectives": {
          "name": "Multiple Perspectives",
          "description": "Different viewpoint characters",
          "advantages": ["complete picture", "unreliable narrators", "dramatic irony", "complexity"],
          "structure": "alternating chapters"
        },
        "fragmented": {
          "name": "Fragmented/Non-linear",
          "description": "Jumbled timeline",
          "techniques": ["flashbacks", "memory triggers", "parallel times", "puzzle pieces"],
          "effect": "gradual understanding"
        },
        "epistolary": {
          "name": "Epistolary",
          "description": "Told through documents",
          "formats": ["emails", "texts", "diary entries", "social media posts"],
          "authenticity": "found documents"
        },
        "minimalist": {
          "name": "Minimalist",
          "description": "Spare, understated prose",
          "characteristics": ["short sentences", "implied emotions", "white space", "show don't tell"],
          "impact": "reader interpretation"
        }
      }
    },
